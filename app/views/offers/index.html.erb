<h1>Offers#index</h1>
<p>Find me in app/views/offers/index.html.erb</p>


<% @offers.each do |offer| %>
  <li> <%= link_to offer.celebrity_name, offer_path(offer) %> </li>
  <li> <%= offer.price%> </li>
  <li> <%= offer.category%> </li>
  <li> <%= offer.content%> </li>
  <li> <%= cl_image_tag offer.photo.key, height: 400, width: 400, crop: :fit %></li>
<% end %>

<%= link_to "Add a new offer", new_offer_path, class: "btn btn-primary"  %>
